{
  "compilerOptions": {
    "outDir": "./dist",
    "noImplicitAny": false,
    "strictNullChecks": true,
    "module": "es6",
    "target": "esnext",
    "moduleResolution": "node",
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "esModuleInterop": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": [
    "node_modules",
    "src/@deprecated/**/*.ts",
    "src/**/*@deprecated.tsx"
  ]
}
